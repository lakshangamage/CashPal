<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:context="com.intelligentz.cashpal.cashpal.view.eceivePaymentActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bill Payment"
            android:id="@+id/titleTxt"
            android:padding="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textStyle="bold" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/pinTxt"
            android:hint="Pin"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:met_iconLeft="@drawable/password_icon"
            app:met_floatingLabel="highlight"
            app:met_singleLineEllipsis="true"
            app:met_clearButton="true"
            app:met_textColor="@color/met_textColor"
            app:met_baseColor="@color/met_baseColor"
            app:met_primaryColor="@color/met_primaryColor"
            app:met_errorColor="@color/met_errorColor"
            android:inputType="numberPassword"
            android:textSize="15dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/mobileTxt"
            android:hint="Account No."
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:met_iconLeft="@drawable/mobile_number_icon"
            app:met_floatingLabel="highlight"
            app:met_singleLineEllipsis="true"
            app:met_clearButton="true"
            app:met_textColor="@color/met_textColor"
            app:met_baseColor="@color/met_baseColor"
            app:met_primaryColor="@color/met_primaryColor"
            app:met_errorColor="@color/met_errorColor"
            app:met_maxCharacters="10"
            app:met_autoValidate="true"
            android:inputType="phone"
            app:met_helperText="07XXXXXXXX"
            android:textSize="15dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/amountTxt"
            android:hint="Amount"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:met_iconLeft="@drawable/rupee"
            app:met_floatingLabel="highlight"
            app:met_singleLineEllipsis="true"
            app:met_clearButton="true"
            app:met_textColor="@color/met_textColor"
            app:met_baseColor="@color/met_baseColor"
            app:met_primaryColor="@color/met_primaryColor"
            app:met_errorColor="@color/met_errorColor"
            app:met_autoValidate="true"
            android:inputType="numberDecimal"
            android:textSize="15dp"
            />
        <com.andexert.library.RippleView
            android:id="@+id/rippleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/more2"
            android:layout_marginTop="20dp"
            rv_centered="true">

            <Button
                android:id="@+id/paymentbtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Pay"
                android:textColor="@color/colorIcon"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                />

        </com.andexert.library.RippleView>

    </LinearLayout>

</RelativeLayout>
