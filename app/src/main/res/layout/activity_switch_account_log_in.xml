<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.intelligentz.cashpal.cashpal.view.SwitchAccountLogInActivity">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:gravity="center_horizontal"
        android:padding="30dp">
        <RelativeLayout
            android:id="@+id/mLyout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cashpal"
            android:id="@+id/cashpal"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0px">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/photoView"
            android:src="@drawable/ezcash_icon"
            android:gravity="center_horizontal"
            app:siBorderWidth="2dp"
            app:siBorderColor="#d1d2d3"
            android:layout_centerHorizontal="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/mobileTxt"
            android:hint="Mobile"
            android:layout_below="@id/photoView"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:met_iconLeft="@drawable/mobile_number_icon"
            app:met_floatingLabel="highlight"
            app:met_singleLineEllipsis="true"
            app:met_clearButton="true"
            app:met_textColor="@color/met_textColor"
            app:met_baseColor="@color/met_baseColor"
            app:met_primaryColor="@color/met_primaryColor"
            app:met_errorColor="@color/met_errorColor"
            app:met_maxCharacters="10"
            app:met_autoValidate="true"
            android:inputType="phone"
            app:met_helperText="07XXXXXXXX"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobileTxt"
            android:gravity="center_horizontal|bottom"
            >
            <com.andexert.library.RippleView
                android:id="@+id/rippleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:foregroundGravity="center_horizontal"
                >

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:textColor="@color/colorIcon"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:background="@color/colorPrimaryDark"
                    />

            </com.andexert.library.RippleView>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
