<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CustomerTopUp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:paddingTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Payment"
                android:id="@+id/titleTxt"
                android:padding="20dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/billbtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Bill Payment"
                android:textColor="@color/colorIcon"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                />
            <Button
                android:id="@+id/utilitybtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Utility Payment"
                android:textColor="@color/colorIcon"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                />
            <Button
                android:id="@+id/institutionalbtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Institutional Payment"
                android:textColor="@color/colorIcon"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                />
            <Button
                android:id="@+id/receivebtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Receive Payment"
                android:textColor="@color/colorIcon"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
