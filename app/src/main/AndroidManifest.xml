<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.intelligentz.cashpal.cashpal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.LogInActivity" />
        <activity android:name=".view.OTPValidationActivity" />
        <activity android:name=".view.LanguageSelectionActivity" />
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.LanguageChangeActivity" />
        <activity android:name=".view.AddAccountActivity" />
        <activity android:name=".view.AddAccountOTPValidationActiviry" />
        <activity android:name=".view.SwitchAccountLogInActivity"></activity>
    </application>

</manifest>